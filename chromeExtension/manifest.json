{
  "manifest_version": 2,

  "name": "for-flixter",
  "description": "This extension shows the hidden Netflix categories",
  "version": "1.0",

  "browser_action": {  
    "default_icon": "./icons/logo.png",
    "default_popup": "popup.html",
    "default_title": "For-Flixter FTW"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}